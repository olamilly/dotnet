@model MovieDB.Models.Movie
@{ 
    ViewData["Title"] = "Adding new Movie";
}
<a asp-action="Index" class="btn btn-outline-secondary btn-sm">back to list</a>
<hr />
<h2 class="text-primary">Add a New Movie to your Collection</h2>
<hr />
<form asp-action="AddNew" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="col-md-6">
            <div class="form-group">
                <h6><label class="control-label" asp-for="Title"></label></h6>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <h6><label class="control-label" asp-for="Genre"></label></h6>
                <input asp-for="Genre" class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-6">
            <div class="form-group">
                <h6><label class="control-label" asp-for="DateOfRelease"></label></h6>
                <input type="date" asp-for="DateOfRelease" class="form-control" />
                <span asp-validation-for="DateOfRelease" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <h6><label class="control-label" asp-for="Price"></label></h6>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group text-center">
        <input type="submit" value="Add New" class="btn btn-primary" />
    </div>
</form>

@section Scripts{ 
@{ <partial name="_ValidationScriptsPartial" /> }
}